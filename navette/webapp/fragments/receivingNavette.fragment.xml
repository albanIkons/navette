<core:FragmentDefinition    height="100%" 
                            xmlns="sap.m" 
                            xmlns:f="sap.f"
                            xmlns:l="sap.ui.layout" 
                            xmlns:core="sap.ui.core"
                            xmlns:form="sap.ui.layout.form" >
    <VBox busy="{mainModel>/receiveBusy}">                      
        <form:SimpleForm 
                        columnsXL="3"
                        columnsL="2"  
                        columnsM="1" 
                        layout="ColumnLayout" 
                        labelSpanXL="3"
                        labelSpanL="3"
                        labelSpan="3">
            <form:toolbar>
                <Toolbar >
                    <Title text="{i18n>riceviNavette}"/>
                    <ToolbarSpacer />
                    <Button icon="sap-icon://trend-up" text="{i18n>esegui}" press="onReceivePress"/>
                </Toolbar>
            </form:toolbar>
            <Label text="{i18n>navetteNr}" required="false"/>
            <Input id="recNavetteId" showValueHelp="true" valueHelpRequest=".onNavetteHelp"/>

            <Label text="{i18n>wipout}" required="false"/>
                <Input id="recieveWipOutId" showValueHelp="true" valueHelpRequest=".onWipoutHelp" submit="onWipSubmit"/>
        </form:SimpleForm>

        <Table id="wipOutTableId" items="{wipOutList>/}">
            <!-- <headerToolbar>
                <OverflowToolbar>
                    <Title text="WIP Out (11)" />
                </OverflowToolbar>
            </headerToolbar> -->
            <columns>
                <Column minScreenWidth="Tablet" demandPopin="true">
                    <Text text="Navette" wrapping="" />
                </Column>
                <Column minScreenWidth="Tablet" demandPopin="true">
                    <Text text="Wip Out" wrapping="false" />
                </Column>
                <Column minScreenWidth="Tablet" demandPopin="true">
                    <Text text="Message" wrapping="false" />
                </Column>
            </columns>
            <items>
                <ColumnListItem>
                    <!-- <customData>
                        <core:CustomData key="mydata" 
                        value="{wipOutList>col5}" 
                        writeToDom="true"></core:CustomData>
                    </customData> -->
                    <cells>
                        <ObjectIdentifier text="{wipOutList>NAVNUM}" />
                        <ObjectIdentifier text="{wipOutList>WIP_OUT}" />
                        <ObjectIdentifier text="{wipOutList>MESSAGE}" />
                    </cells>
                </ColumnListItem>
            </items>
        </Table>
    </VBox>  
</core:FragmentDefinition>