<core:FragmentDefinition xmlns="sap.m" 
                        xmlns:f="sap.f"
                        xmlns:l="sap.ui.layout" 
                        xmlns:core="sap.ui.core"
                        xmlns:form="sap.ui.layout.form" 
                        height="100%">

    <form:SimpleForm busy="{mainModel>/trasferBusy}"
                     columnsXL="3"
                     columnsL="2"  
                     columnsM="1" 
                     layout="ColumnLayout" 
                     labelSpanXL="3"
                     labelSpanL="3"
                     labelSpan="3">
        <form:toolbar>
            <Toolbar >
                <Title text="{i18n>transferNavette}"/>
                <ToolbarSpacer />
                <Button icon="sap-icon://trend-up" text="{i18n>esegui}" press="onTransferPress"/>
            </Toolbar>
        </form:toolbar>
        <Label text="{i18n>navetteNr}" required="true"/>
        <Input id="transferNavetteId" showValueHelp="true" valueHelpRequest=".onNavetteHelp"/>
    </form:SimpleForm>

    <VBox class="sapUiSmallMargin">
        <Label text="{i18n>selNavetta}" />
        <HBox class="sapUiTinyMarginTopBottom">
            <VBox class="sapUiMediumMarginEnd">
                <CheckBox id="transferCheckBoxNc" text="NC" selected="false"/>
            </VBox>
            <VBox class="sapUiMediumMarginEnd">
                <CheckBox id="transferCheckBoxNt" text="NT" selected="false"  />
            </VBox>
            <VBox class="sapUiMediumMarginEnd">
                <CheckBox id="transferCheckBoxWr" text="WR" selected="false" />
            </VBox>
            <VBox class="sapUiMediumMarginEnd">
                <CheckBox id="transferCheckBoxNg" text="NG" selected="false" />
            </VBox>
        </HBox>
    </VBox>
    <!-- <core:Fragment fragmentName="npmnavette.navette.fragments.statoNavetta" type="XML" /> -->

</core:FragmentDefinition>